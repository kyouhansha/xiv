@require('constants.styl')
@require('material.styl')

*
    box-sizing: border-box

body
    color: getTextColor()
    font-family: $fontFamily
    line-height: 1.0
    margin: 0px
    text-rendering: optimizeLegibility
    -webkit-font-smoothing: antialiased

h1, h2, h3, h4, h5, h6
    font-weight: 400
    margin: 0px

a
    text-decoration: none

button, input
    font-family: $fontFamily
    outline: 0px none

.icon
    align-items: center
    display: inline-flex
    height: 48px
    justify-content: center
    width: 48px

.action
    background: none
    border-width: 0px
    height: 48px
    margin: 0px 8px
    padding: 6px 0px
    -webkit-appearance: none

.action-text
    applyFontSize('body2')
    align-items: center
    display: flex
    min-width: 64px
    padding: 0px 8px
    justify-content: center
    text-transform: uppercase

.action--flat
    @extend .action

.appBar
    align-items: center
    box-shadow: 0px 1px $color-canvas--alt
    display: flex
    height: 64px
    padding: 8px 20px 8px 0px

.appBar-title
    font-size: 24px
    margin-left: 24px
    margin-right: auto

.appBar-link
    margin: 0px 12px

.page-title
    applyFontSize('headline')
    margin: 1.5em 1em 1em

.subheader
    applyFontSize('body2')
    align-items: center
    color: getTextColor('secondary')
    display: flex
    height: 48px
    padding: 16px

.gridList
    display: flex
    flex-wrap: wrap
    justify-content: center

.gridList-cell
    border-color: $color-canvas
    border-style: solid
    border-width: 0px 2px 0px 0px
    display: flex
    flex: none
    height: 160px
    justify-content: flex-end
    margin-bottom: 4px
    width: 50%

    &:nth-of-type(2n)
        border-width: 0px 0px 0px 2px
        justify-content: flex-start

    &:nth-last-of-type(1)
        border-width: 0px
        justify-content: center
        margin-bottom: 0px

.gridList-tile
    align-items: center
    background-color: $color-canvas--alt
    display: flex
    flex: 1 1 0px
    justify-content: center
    max-width: 320px
    min-width: 158px

.build-slot-name
    @extend .subheader

.build-items
    display: flex
    margin: 0px
    padding: 0px

.build-item
    display: block
    height: 320px
    list-style: none outside none
    margin-right: 16px
    width: 320px
    
    &.is-selected
        box-shadow: inset 0px 0px 1px getTextColor('secondary')

.build-item-header
    display: flex
    padding: 16px

.build-item-image
    background-color: getTextColor('secondary')
    border-radius: 50%
    height: 40px
    margin-right: 16px
    width: 40px

.build-item-titles
    applyFontSize('body2')

.build-item-name
    margin: 4px 0px

.build-item-itemLevel
    color: getTextColor('secondary')
    margin: 4px 0px

.build-item-tabs
    display: flex

.build-item-tab
    applyFontSize('body2')
    align-items: center
    display: flex
    flex: 0 0 50%
    height: 48px
    justify-content: center
    min-width: 0px
    text-transform: uppercase

.build-item-panes
    height: 148px

.build-item-actions
    display: flex
    padding: 2px 0px
